<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '本文' %>
    <%= f.text_area :content, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">タグ</label>
    <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]}, class: 'form-control', id: "exampleFormControlSelect1" %>
  </div>
  <%= f.submit '保存', class: 'cp_button07' %>
<% end %>