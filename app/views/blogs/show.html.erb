
<br>
<div class="wrap flc">
  <div class="main">
    <div id="dqnplus">
      <h3><%= @blog.title %></h3>
        <a name="comments"></a>
        <h4 id="comment">カテゴリ: <%= @blog.category.category %></h4>
        <div id="comment-1" style="width:0;height:0;"></div>
          <div id="comment">
            <div id="comment_text">
              <span>
                投稿者
                <span>名無しさん</span>
                <%= @blog.created_at.to_s(:datetime_jp) %>
              </span>
              <p id="vlog"><%= @blog.content %></p>
            </div>
          </div>
        </div>
        <% @comments.each do |comment| %>
          <div id="comment">
            <div id="comment_text">
              <span>
                投稿者
                <span>名無しさん</span>
                <%= comment.created_at.to_s(:datetime_jp) %>
              </span>
              <p id="vlog"><%= text_url_to_link(h(comment.body)).html_safe %></p>
            </div>
          </div>
        <% end %>
        <%= paginate @comments %>
        <br>
        <h3>コメントを投稿する</h3>
        <%= form_for([@blog, @blog.comments.build]) do |f| %>
          <div class="field mb-2">
            <%= f.text_area :body, placeholder: '本文を入力してください',class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "投稿する", class: 'btn btn-block btn-success btn-sm' %>
          </div>
        <% end %>

    <div class="tablet-sub tablet-sub-list"></div>
  </div>
  <div class="sub">
    <%= link_to "スレ一覧に戻る", blogs_path, class: "btn btn-solid" %>
    <br>
    <br>
    <div class="sub-part sub-topics mb20">
      <h3><a class="black" href="/" target="_blank">最新スレ</a></h3>
      <ul>
        <% @blogs.each do |blog| %>
        <li>
          <div class="small_font"><%= blog.created_at.to_s(:datetime_jp) %></div>
          <%= link_to blog.title, blog_path(blog.id) %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="sub-part sub-topics mb20">
      <p class="head">PV数</p>
        <ul>
          <% @rank_blogs.each do |blog| %>
          <li class="flc">
              <a href="/topics/3269692/">
              <div class="info">
                <p class="title"><%= link_to blog.title, blog_path(blog.id) %></p>
                <p class="comment"><span class="icon-comment"></span><%= blog.impressions_count %>pv</p>
              </div>
              </a>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
